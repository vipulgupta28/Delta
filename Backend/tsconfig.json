{
  "compilerOptions": {
    "target": "ES2020",                   /* Use a modern target */
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "types": ["node", "express"]          /* ðŸ‘ˆ include Node + Express types */
  },
  "include": ["src"],                     /* Ensure TypeScript compiles your src folder */
  "exclude": ["node_modules", "dist"]     /* Avoid compiling dependencies */
}
